<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_close</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <!-- Bottom Sheet style -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="background">@drawable/cti_rounded_green</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <!-- ParedDeviceNormalTitle -->
    <style name="ParedDeviceNormalTitle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="ParedDeviceNormalText">
         <item name="android:layout_marginStart">8dp</item>
         <item name="android:padding">8dp</item>
         <item name="android:textSize">16sp</item>
         <item name="android:textStyle">normal</item>
    </style>

    <style name="AppButton">
        <item name="background">@drawable/selector_medium_rounded_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RemoteControlButton">
        <item name="android:layout_width">@dimen/remote_button_size</item>
        <item name="android:layout_height">@dimen/remote_button_size</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="background">@android:color/white</item>

    </style>

    <style name="NormalTextLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallGrayNormalTextLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VgsGridItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/vgs_underscore</item>
        <item name="android:textColor">#9B9898</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="ConditionItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/fw_primary_whit_color_selector</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/fw_rounded_primary_stroked_filled_selector</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="DefaultCustomTextInputHint" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">14sp</item>
        <item name="background">@android:color/transparent</item>
        <item name="hintTextColor">@color/cti_gray_hint</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/cti_gray_hint</item>
    </style>

    <!--        <item name="android:fontFamily">@font/lato_regular</item>-->

    <style name="CustomMainDialogButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">7dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">216dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="backgroundTint">@color/colorPrimaryApp</item>
        <item name="cornerRadius">40dp</item>
    </style>


    <style name="CustomTextDialogButton" parent="CustomMainDialogButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:elevation">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomDialogBodyText">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">32dp</item>
        <item name="android:padding">@dimen/space_small</item>
    </style>

    <style name="CustomDialogTitleText" parent="CustomDialogBodyText">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#383636</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>