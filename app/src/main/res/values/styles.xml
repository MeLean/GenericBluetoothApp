<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_close</item>
    </style>

    <style name="ParedDeviceNormalTitle">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="ParedDeviceNormalText">
         <item name="android:layout_marginStart">8dp</item>
         <item name="android:padding">8dp</item>
         <item name="android:textSize">16sp</item>
         <item name="android:textStyle">normal</item>
    </style>

    <style name="AppButton">
        <item name="background">@drawable/selector_medium_rounded_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RemoteControlButton">
        <item name="android:layout_width">@dimen/remote_button_size</item>
        <item name="android:layout_height">@dimen/remote_button_size</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="background">@android:color/white</item>

    </style>

    <style name="NormalTextLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallGrayNormalTextLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>