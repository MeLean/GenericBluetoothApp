<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cti_rounded_green"
        >

        <ImageView
            android:id="@+id/start_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            app:tint="@color/green_hint"
            app:layout_constraintBottom_toBottomOf="@+id/input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/input_layout"
            tools:ignore="ContentDescription"
            tools:src="@drawable/bnv_profile"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/green_hint"
            app:layout_constraintEnd_toStartOf="@+id/end_img"
            app:layout_constraintStart_toEndOf="@+id/start_img"
            app:layout_constraintTop_toTopOf="parent"
            tools:hint="@string/app_name"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColorHint="@color/green_hint"
                android:textIsSelectable="true"
                android:text="@string/app_name"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/end_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            app:tint="@color/green_hint"
            app:layout_constraintBottom_toBottomOf="@+id/input_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/input_layout"
            tools:ignore="ContentDescription"
            tools:src="@drawable/bnv_stats" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/result_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/green_hint"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="@+id/input_wrapper"
        app:layout_constraintStart_toStartOf="@+id/input_wrapper"
        app:layout_constraintTop_toBottomOf="@+id/input_wrapper"
        tools:text="@string/app_name"
        />
</merge>